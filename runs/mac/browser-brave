#!/usr/bin/env bash
set -e
source "$(dirname "$0")/../_platform.sh"

echo "Install Brave browser"

ensure_brew

if [[ -d "/Applications/Brave Browser.app" ]]; then
    echo "Brave is already installed. Upgrading..."
    brew upgrade --cask brave-browser || echo "Brave is already up to date"
else
    brew install --cask brave-browser
fi
